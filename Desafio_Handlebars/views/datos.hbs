<div class="productos" style="display: flex; justify-content: space-evenly; margin-top: 3%">
    {{#if list}}
        {{#each list}}
        <div>
            <p>{{this.title}}</p>
            <p>${{this.price}}</p>
            <img width=100 height=100 src={{this.thumbnail}}>
        </div>
        {{/each}}
    {{else}}
        <h2>No hay productos</h2>
    {{/if}}
</div>
<div style="display: block; margin-top: 3%; margin-left: 6.5%">
    <button style="margin-left: -2%; width: 190px; height: 70px;" class="btn btn-dark"><a style="color: white; text-decoration: none;" href="/" type="button">Agregar Nuevo Producto</button>
</div>