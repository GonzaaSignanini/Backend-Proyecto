html
    head
        title="Productos en Pug"
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    body
        div(style="display: flex; justify-content: space-evenly; flex-wrap: wrap" width=100 ) 
            if productos.length>0
                each producto in productos
                    div(style="margin-top: 2%") 
                        p=producto.title
                        p=producto.price
                        img(width=100 height=100 src=producto.thumbnail)
                        br
            else 
                h2="No hay productos"
        div(width=100 style="display: block; margin-top: 4%; margin-left: 4.5%")
            <button style=" width: 190px; height: 70px;" class="btn btn-dark"><a style="color: white; text-decoration: none;" href="/" type="button">Agregar Nuevo Producto</button>